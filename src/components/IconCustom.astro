---
import { Image } from "astro:assets";
import { Icon } from "@astrojs/starlight/components";

interface Props {
    name: string;
    class?: string;
    size?: string;
}

import easterEggs from "../assets/easter-eggs/icon.svg";
import commandFramework from "../assets/command-framework/icon.svg";
import carousel from "../assets/carousel/icon.svg";
import santaSays from "../assets/santa-says/icon.svg";

const ICONS: Record<string, any> = {
    "easter-eggs": easterEggs,
    "command-framework": commandFramework,
    "carousel": carousel,
    "santa-says": santaSays,
};

const { name, size, class: cls } = Astro.props;
const src = ICONS[name];
const style = size ? `width:${size};height:${size};` : "";
---

{src
    ? <Image src={src} alt={name} class={cls} style={style} />
    : <Icon name={name as any} class={cls} />
    }
