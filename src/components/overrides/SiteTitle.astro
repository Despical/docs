---
import { Image } from "astro:assets";
import despicalLight from "../../assets/despical-light.png";
import despicalDark from "../../assets/despical-dark.png";

import easterLight from "../../assets/easter-eggs/icon-light.svg";
import easterDark from "../../assets/easter-eggs/icon-dark.svg";

import commandLight from "../../assets/command-framework/icon-light.svg";
import commandDark from "../../assets/command-framework/icon-dark.svg";

import carouselLight from "../../assets/carousel/icon-light.svg";
import carouselDark from "../../assets/carousel/icon-dark.svg";

import santaLight from "../../assets/carousel/icon-light.svg";
import santaDark from "../../assets/carousel/icon-dark.svg";

const LOGO_MAP = {
    default: { light: despicalLight, dark: despicalDark, circle: true },
    "/easter-eggs": { light: easterLight, dark: easterDark, circle: false },
    "/command-framework": { light: commandLight, dark: commandDark, circle: false },
    "/carousel": { light: carouselLight, dark: carouselDark, circle: false },
    "/santa-says": { light: santaLight, dark: santaDark, circle: false },
};

const { pathname } = Astro.url;
let current = LOGO_MAP.default;

for (const key of Object.keys(LOGO_MAP)) {
    if (pathname.startsWith(key) && key !== "default") {
        current = LOGO_MAP[key as keyof typeof LOGO_MAP];
        break;
    }
}

const { siteTitle, siteTitleHref } = Astro.locals.starlightRoute;
---

<a href={siteTitleHref} class="site-title sl-flex">
    <Image
            width="96"
            height="96"
            class:list={["light:sl-hidden print:hidden", current.circle ? "circle-logo" : ""]}
            alt="Logo (Light)"
            src={current.light}
    />
    <Image
            width="96"
            height="96"
            class:list={["dark:sl-hidden print:block", current.circle ? "circle-logo" : ""]}
            alt="Logo (Dark)"
            src={current.dark}
    />
    <span class="sr-only notranslate" translate="no">{siteTitle}</span>
</a>

<style>
    .site-title {
        align-items: center;
        gap: var(--sl-nav-gap);
        font-size: var(--sl-text-h4);
        font-weight: 600;
        color: var(--sl-color-text-accent);
        text-decoration: none;
        white-space: nowrap;
    }

    img {
        height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
        width: auto;
        max-width: 100%;
        object-fit: contain;
        object-position: 0 50%;
    }

    .circle-logo {
        border-radius: 50%;
    }
</style>